<% layout('/layouts/boilerplate')%>

<div class="banner">
    <div class="container px-xl-5 py-xl-5" id="home">
        <div class="w-50 d-inline-block py-xl-4">
            <h1 class="banner-title text-white">Services</h1>
            <p class="text-white">
                Gil's Automotive offers a wide range of services.
                We have been keeping up with technology to ensure that we could fix anything.
            </p>
        </div>
        <img src="https://i.imgur.com/l8ijGdi.png" width="35%" id="red-car" class="pl-xl-5 align-top ml-xl-5">
    </div>

    <img src="https://i.imgur.com/YPJ95dC.png" class="w-100">
</div>

<div class="container py-xl-5 px-xl-5" id="services">
    <div>
        <% for (const service in serviceData) { %>
            <a href=<%= `/services/${serviceData[service].url}` %>>
                <div class="card card-service">
                    <img class="card-img-top" src=<%= serviceData[service].img %> alt="Radiator">
                    <div class="card-body border-top">
                        <h5 class="card-title small"><%= serviceData[service].name%></h5>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</div>
</html>